{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "minikube@1.34.0",
    "kubectx@0.9.5",
    "kubectl@1.31.2",
    "terraform@1.5.5",
    "terragrunt@0.69.10"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "minikube:start": [
        "minikube start --driver=docker --kubernetes-version=v1.31.3 --network=minikube-network",
        "minikube addons enable ingress",
        "minikube update-context",
        "kubectx minikube"
      ],
      "docker-compose:start": [
        "docker compose up -d --force-recreate",
        "docker compose -f docker-compose.nomad.yaml up -d --force-recreate"
      ],
      "argo-cd":    ["./scripts/argo-cd.sh"],
      "crossplane": ["./scripts/crossplane.sh"],
      "kestra":     ["./scripts/kestra.sh"]
    }
  }
}
