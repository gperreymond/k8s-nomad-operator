{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "minikube@1.34.0",
    "kubectx@0.9.5",
    "kubectl@1.31.2",
    "terraform@1.5.5",
    "terragrunt@0.69.10",
    "jsonnet@0.20.0"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "jsonnet:build": [
        "rm -rf build",
        "mkdir -p build/manifests/setup",
        "jsonnet -J vendor -m build/manifests kube-prometheus.jsonnet | xargs -I{} sh -c 'cat {} | ~/go/bin/gojsontoyaml > {}.yaml' -- {}",
        "find build/manifests -type f ! -name '*.yaml' -delete"
      ],
      "jsonnet:copy": [
        "rm -rf charts/remote-charts/prometheus-operator/manifests",
        "mkdir -p charts/remote-charts/prometheus-operator/manifests",
        "mv build/manifests/setup/prometheus-operator-*.yaml charts/remote-charts/prometheus-operator/manifests"
      ],
      "docker-compose:config": [
        "docker compose --env-file compose/global.vars config"
      ],
      "minikube:start": [
        "minikube start --driver=docker --kubernetes-version=v1.31.3 --network=minikube-network",
        "minikube addons enable ingress",
        "minikube update-context",
        "kubectx minikube"
      ],
      "docker-compose:start": [
        "docker compose --env-file compose/global.vars up --detach"
      ],
      "docker-compose:start-recreate": [
        "docker compose --env-file compose/global.vars up --detach --force-recreate"
      ],
      "terraform:linter": [
        "terraform fmt -recursive terraform/",
        "terragrunt hclfmt --terragrunt-hclfmt-exclude-dir opt"
      ]
    }
  }
}
